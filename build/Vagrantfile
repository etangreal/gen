
Vagrant.require_version ">= 1.6.0"

# ---------------------------------------------------------------------------------------------------------------------
# DEFINITIONS
# ---------------------------------------------------------------------------------------------------------------------

API_VERSION = 2

BOX_NAME    = "coreos-alpha"
BOX_VERSION = ">= 459.0.0"
BOX_URL     = "http://alpha.release.core-os.net/amd64-usr/current/coreos_production_vagrant.json"
            # "http://storage.core-os.net/coreos/amd64-usr/alpha/coreos_production_vagrant.json"

VM_NAME     = "CoreOS"

VB_GUI      = FALSE
VB_MEMORY   = 1048
VB_CPUS     = 1

# ---------------------------------------------------------------------------------------------------------------------
# CONFIG
# ---------------------------------------------------------------------------------------------------------------------

Vagrant.configure(API_VERSION) do |config|

  # -------------------------------------------------------------------------------------------------------------------
  # disable plugin - avoids conflict
  # -------------------------------------------------------------------------------------------------------------------

  if Vagrant.has_plugin?("vagrant-vbguest") then
    config.vbguest.auto_update = false
  end

  # -------------------------------------------------------------------------------------------------------------------

  config.vm.box         = BOX_NAME
  config.vm.box_version = BOX_VERSION
  config.vm.box_url     = BOX_URL

  config.vm.hostname    = VM_NAME

  config.ssh.forward_agent = true

  # -------------------------------------------------------------------------------------------------------------------

  config.vm.provider :virtualbox do |vb|

    # On CoreOS in VirtualBox, we don't have guest additions or a functional vboxsf
    #   we tell Vagrant that so it can be smarter.

    vb.check_guest_additions = false
    vb.functional_vboxsf     = false   

    vb.gui    = VB_GUI
    vb.memory = VB_MEMORY
    vb.cpus   = VB_CPUS

  end

  # -------------------------------------------------------------------------------------------------------------------

  config.vm.network :private_network, ip: "172.17.8.100"

  # PORT FORWARDING:
  #   CONTAINER(DOCKER) -> GUEST(COREOS) -> HOST(MAC-OSX) 
  #   80                -> 80            -> 8080
  #   3000              -> 3000          -> 3030
  #   3001              -> 3001          -> 3031
  
  config.vm.network "forwarded_port", guest: 80, host: 8080
  # config.vm.network "forwarded_port", guest: 3000, host: 3030
  # config.vm.network "forwarded_port", guest: 3001, host: 3031

  # -------------------------------------------------------------------------------------------------------------------
  # Enable NFS for sharing the host machine into the coreos-vagrant VM.
  # -------------------------------------------------------------------------------------------------------------------

  config.vm.synced_folder "../", "/home/core/share", id: "core", :nfs => true, :mount_options => ['nolock,vers=3,udp']

  # -------------------------------------------------------------------------------------------------------------------

  config.vm.provision "shell", inline: "./vagrant/config.sh", run: "once"

  # config.vm.provision "shell", inline: "docker build .", run: "once"

  # ALTERNATIVE CONFIG FOR SHELL PROVISIONING ...

  # config.vm.provision "shell" do |s|
  #  s.inline = "docker build /home/core/share/build/docker"
  #  s.path   = "setup.sh"
  #  s.run    = "once"
  # end

  # -------------------------------------------------------------------------------------------------------------------

end

# ---------------------------------------------------------------------------------------------------------------------
# END
# ---------------------------------------------------------------------------------------------------------------------

